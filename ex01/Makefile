CC		=	clang++
CFLAGS	=	-Wall -Wextra -Werror

NAME	=	phonebook
FILES	=	main.cpp Phonebook.cpp Contact.cpp
INC		=	Phonebook.hpp Contact.hpp

OBJ		=	$(FILES:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

%.o: %.cpp
	$(CC) $(CFLAGS) -c $^ -o $@

clean: ;

fclean: clean
	$(RM) $(NAME)

re: fclean all
